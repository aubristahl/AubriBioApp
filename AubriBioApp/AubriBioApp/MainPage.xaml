<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AubriBioApp"
             x:Class="AubriBioApp.MainPage">
  
    

        <Grid>
        <StackLayout>
        <!-- Place new controls here -->
        
        <Grid.RowDefinitions>
        <StackLayout>
        <RowDefinition />
        <BoxView HeightRequest="200"
                 BackgroundColor="Black"/>
        </StackLayout>
        </Grid.RowDefinitions> 
        
        <StackLayout Padding="20">
        <Label Text="select an option " />
        <Button Text="biography"
                IsEnabled="true"
                BackgroundColor="Yellow"
                TextColor="Black"/>
            
        <Button Text="skills"
                IsEnabled="true"
                x:Name="callEntry"
                BackgroundColor="Yellow"
                TextColor="Black"/>
            
        <Button Text="contact me"
                IsEnabled="true"
                BackgroundColor="Yellow"
                TextColor="Black"/>
        </StackLayout>
        
        
        <StackLayout Margin="0, 135, 0, 0">
        <BoxView HeightRequest="50"
                 BackgroundColor="Black"/>
        </StackLayout>

        </StackLayout>
        </Grid>
   

   
     

</ContentPage>
